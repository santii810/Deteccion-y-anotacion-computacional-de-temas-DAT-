<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">

    <Properties>
        <Property name="LOG_LOC">logs</Property>
        <Property name="MAX">5</Property>
        <Property name="LOG_PATTERN">%d{yyyy.MM.dd HH:mm:ss.SSS} [%p] %c: %m%n
        </Property>
    </Properties>

    <Appenders>
        <RollingFile name="FILE" fileName="${LOG_LOC}/Parser.log"
                     filePattern="${LOG_LOC}/Parser%d{yyyy-MM-dd}_%i.log">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>

            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>

        </RollingFile>

        <Console name="STDOUT" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="file" level="trace" additivity="false">
            <appender-ref ref="FILE"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="FILE"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

</Configuration>